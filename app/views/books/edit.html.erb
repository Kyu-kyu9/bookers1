<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f|  %>

  <div class="fields">
    <label>title</label>
  <%= f.text_field :title %>
  </div>
	<div class="fields">
  <label>body</label>
  <%= f.text_area :body %>
	</div>
	
  <label class="action"><%= f.submit 'Update Book' %></label>
  <%= link_to 'Show',book_path(@book.id) %>
|
<%= link_to "Back", '/books' %>
<% end %>